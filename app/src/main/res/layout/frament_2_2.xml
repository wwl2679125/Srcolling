<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:background="#ffffff">


                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/t4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="10dp"/>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:background="#ffffff"
                    android:id="@+id/relativeLayout"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/imageView1"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/card_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="用户回复的评论"
                        android:textSize="14sp"
                        android:textColor="#59739B"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="17dp" />

                    <TextView
                        android:id="@+id/author1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="游戏评论123456..."
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_below="@+id/card_name1"
                        android:layout_alignStart="@+id/card_name1" />
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:background="#ffffff">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/t4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="10dp"/>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:background="#ffffff"
                    android:id="@+id/relativeLayout2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/card_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="用户回复的评论"
                        android:textSize="14sp"
                        android:textColor="#59739B"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="17dp" />

                    <TextView
                        android:id="@+id/author2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="这游戏不好玩"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_below="@+id/card_name2"
                        android:layout_alignStart="@+id/card_name2" />
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>