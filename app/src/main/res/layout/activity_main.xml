<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a50593.srcolling.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/colorPrimary"></Toolbar>





    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14b9c8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="phb_grxx"
                android:src="@drawable/touxiang" />

            <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="排行榜"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:onClick="phb_search"
                android:layout_gravity="center"
                android:src="@drawable/ic_search_black_48dp1" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>



    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14b9c8"
        app:tabTextColor="#b2ebf2"
        app:tabSelectedTextColor="#fafafa"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:layout_weight="1.07" />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        app:menu="@menu/main_button_1"
        app:itemIconTint="#fafafa"
        app:itemTextColor="@color/textWhite"

        />
</LinearLayout>
